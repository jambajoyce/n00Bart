
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    tools:context=".MainActivity" >

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </AbsoluteLayout>


    <Button
        android:id="@+id/next_leave_button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_x="200dp"
        android:layout_y="620dp"
        android:padding="10dip"
        android:textColor="@color/White"
        android:background="@color/DodgerBlue"
        android:textSize="32sp"
		android:fontFamily="sans-serif-condensed"
        android:text="@string/next_leave" />

    <Button
        android:id="@+id/buy_button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_x="200dp"
        android:layout_y="170dp"
        android:padding="10dip"
		android:textColor="@color/White"
        android:background="@color/DodgerBlue"
        android:textSize="32sp"
		android:fontFamily="sans-serif-condensed"
        android:text="@string/buy_use" />

    <Button
        android:id="@+id/map_button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_x="200dp"
        android:layout_y="320dp"
        android:padding="10dip"
        android:textColor="@color/White"
        android:background="@color/DodgerBlue"
        android:textSize="32sp"
		android:fontFamily="sans-serif-condensed"
        android:text="@string/where_go" />

    <Button
        android:id="@+id/fare_button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_x="200dp"
        android:layout_y="470dp"
        android:padding="10dip"
        android:textColor="@color/White"
        android:background="@color/DodgerBlue"
        android:textSize="32sp"
		android:fontFamily="sans-serif-condensed"
        android:text="@string/how_much" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_x="75dp"
        android:layout_y="320dp"
        android:src="@android:drawable/ic_menu_mapmode" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_x="75dp"
        android:layout_y="170dp"
        android:src="@android:drawable/ic_menu_info_details" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_x="75dp"
        android:layout_y="620dp"
        android:src="@android:drawable/ic_menu_recent_history" />

	<ImageView
	    android:id="@+id/imageView1"
	    android:layout_width="100dp"
	    android:layout_height="100dp"
	    android:layout_x="75dp"
	    android:layout_y="470dp"
	    android:src="@drawable/test" />

	<TextView
	    android:id="@+id/textView2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_x="60dp"
	    android:layout_y="36dp"
	    android:fontFamily="sans-serif-light"
	    android:gravity="center"
	    android:text="@string/n00Bart"
        android:textColor="@color/DodgerBlue"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="72sp" />

	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="236dp"
	    android:layout_height="93dp"
	    android:layout_x="325dp"
	    android:layout_y="41dp"
	    android:fontFamily="sans-serif-light"
	    android:gravity="center"
	    android:text="@string/welcome"
	    android:textColor="@color/Gray"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="28sp" />

</AbsoluteLayout>